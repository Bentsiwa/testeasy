<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EasySave</name>
    <description>
        An app that allows users to save money.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/android/easy.png" density="land-hdpi"/>
        <splash src="res/screen/android/easy.png" density="land-ldpi"/>
        <splash src="res/screen/android/easy.png" density="land-mdpi"/>
        <splash src="res/screen/android/easy.png" density="land-xhdpi"/>

        <splash src="res/screen/android/easy.png" density="port-hdpi"/>
        <splash src="res/screen/android/easy.png" density="port-ldpi"/>
        <splash src="res/screen/android/easy.png" density="port-mdpi"/>
        <splash src="res/screen/android/easy.png" density="port-xhdpi"/>
    </platform>
    <platform name="android">
        <icon src="res/icon/android/easy.png" density="mdpi" />
        <icon src="res/icon/android/easy.png" density="hdpi" />
        <icon src="res/icon/android/easy.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-barcodescanner" spec="^0.7.4" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="phonegap-plugin-barcodescanner" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
</widget>
